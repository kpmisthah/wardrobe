    <!-- Main content -->
    <div class="main-content">
      <div class="metrics-container">
        <div class="metric">
          <h3>3002</h3>
          <p>Total Users</p>
        </div>
        <div class="metric">
          <h3>266</h3>
          <p>Total Products</p>
        </div>
        <div class="metric">
          <h3>66</h3>
          <p>Total Orders</p>
        </div>
        <div class="metric">
          <h3>277</h3>
          <p>Weekly Sales</p>
        </div>
      </div>
    
      <div class="maintenance-container">
        <h3>Add Maintenance</h3>
        <div class="form-group">
          <label for="start-time">Start time</label>
          <input type="text" id="start-time" placeholder="dd-mm-yyyy" />
        </div>
        <div class="form-group">
          <label for="end-time">End time</label>
          <input type="text" id="end-time" placeholder="dd-mm-yyyy" />
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" placeholder="Enter a message"></textarea>
        </div>
        <button class="add-btn">Add</button>
      </div>
    
      <div class="stats-container">
        <div class="stat-card">
          <h3>Revenue</h3>
          <p>$32,123</p>
