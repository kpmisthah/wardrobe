	<script>
		document.addEventListener('DOMContentLoaded', function () {
			// Function to update cart count from any page
			window.updateCartCount = function (count) {
				const cartIcon = document.querySelector('.js-show-cart');
				if (cartIcon) {
					cartIcon.setAttribute('data-notify', count);
				}
			};

			// Listen for cart update events
			document.addEventListener('cartUpdated', function (event) {
				updateCartCount(event.detail.count);
			});

			// FIX: Manually handle Mobile Dropdown Toggle
			// This prevents the issue where it automatically closes/doesn't open on touch devices
			const mobileDropdownLink = document.getElementById('dropdownMenuLinkMobile');
			if (mobileDropdownLink) {
				mobileDropdownLink.addEventListener('click', function (e) {
					e.preventDefault();
					e.stopPropagation();
					const parent = this.closest('.dropdown');
					const menu = parent.querySelector('.dropdown-menu');

					// Toggle classes
					if (menu.classList.contains('show')) {
						menu.classList.remove('show');
						parent.classList.remove('show');
					} else {
						// Close any other open dropdowns first? Optional.
						document.querySelectorAll('.dropdown-menu.show').forEach(el => {
							if (el !== menu) el.classList.remove('show');
						});

						menu.classList.add('show');
						parent.classList.add('show');
					}
				});

				// Close when clicking outside
				document.addEventListener('click', function (e) {
					if (!mobileDropdownLink.contains(e.target)) {
						const parent = mobileDropdownLink.closest('.dropdown');
						const menu = parent.querySelector('.dropdown-menu');
						menu.classList.remove('show');
						parent.classList.remove('show');
					}
				});
			}
		});

		// Function to dispatch cart update event (can be called from any page)
		window.dispatchCartUpdate = function (count) {
			document.dispatchEvent(new CustomEvent('cartUpdated', {
				detail: { count: count }
			}));
		};
	</script>
