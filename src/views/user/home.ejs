<!-- Header -->
<%-include('../../views/partials/userPartials/header')%>

  <!-- Slider -->
  <!-- Modern Hero Section -->
  <!-- Modern Hero Section -->
  <section class="hero-section">
    <div class="hero-bg" style="background-image: url('images/hero_banner_new.png'); background-position: center top;">
    </div>
    <div class="hero-overlay" style="background: rgba(0,0,0,0.1);"></div> <!-- Lighter overlay for the lighter image -->
    <div class="hero-content">
      <span class="hero-subtitle animated fadeInDown" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">Spring / Summer
        2026</span>
      <h1 class="hero-title animated fadeInUp" style="text-shadow: 2px 2px 8px rgba(0,0,0,0.3);">The New Standard</h1>
      <a href="/shop" class="hero-btn animated zoomIn">Discover Collection</a>
    </div>
  </section>

  <!-- Modern Categories Section -->
  <section class="sec-banner bg0 p-t-40 p-b-20">
    <div class="container">
      <div class="row">
        <!-- Men's Collection (Large Featured) -->
        <div class="col-md-6 p-b-20 m-lr-auto">
          <div class="block1 wrap-pic-w tall-card">
            <img src="images/banner-02.jpg" alt="Men's Fashion">
            <a href="/shop?category=men" class="block1-txt ab-t-l s-full flex-col-c-m p-lr-15 p-tb-50 trans-03">
              <span class="block1-name ltext-102 trans-04 p-b-8">MEN'S</span>
              <span class="block1-info stext-102 trans-04">Sophisticated & Bold</span>
              <div class="block1-link stext-101 cl0 trans-09 p-t-20">Shop Now</div>
            </a>
          </div>
        </div>

        <!-- Women's & Accessories (Stacked) -->
        <div class="col-md-6 p-b-20 m-lr-auto">
          <div class="row">
            <div class="col-12 p-b-20">
              <div class="block1 wrap-pic-w wide-card">
                <img src="images/banner-01.jpeg" alt="Women's Fashion">
                <a href="/shop?category=women" class="block1-txt ab-t-l s-full flex-col-c-m p-lr-15 p-tb-50 trans-03">
                  <span class="block1-name ltext-102 trans-04 p-b-8">WOMEN'S</span>
                  <span class="block1-info stext-102 trans-04">Elegant & Timeless</span>
                </a>
              </div>
            </div>
            <div class="col-12 p-b-20">
              <!-- Using a distinct image for variety if available, or reusing styled banner -->
              <div class="block1 wrap-pic-w wide-card">
                <img src="images/banner-08.jpg" alt="New Arrivals">
                <a href="/shop" class="block1-txt ab-t-l s-full flex-col-c-m p-lr-15 p-tb-50 trans-03">
                  <span class="block1-name ltext-102 trans-04 p-b-8">NEW ARRIVALS</span>
                  <span class="block1-info stext-102 trans-04">Check the latest trends</span>
                </a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!---- Product -->
  <section class="bg0 p-t-23 p-b-50">
    <div class="container">
      <div class="p-b-10 flex-col-c-m">
        <h3 class="ltext-103 cl5">
          Product Overview
        </h3>
      </div>

      <div class="row isotope-grid">
        <% product.forEach((product)=> { %>
          <div class="col-sm-6 col-md-4 col-lg-4 p-b-20 isotope-item women">
            <div class="block2">
              <div class="block2-pic hov-img0">
                <img src="/uploads/product-images/<%=product.productImage[0]%>" alt="IMG-PRODUCT" />
              </div>

              <div class="block2-txt flex-w flex-t p-t-14">
                <div class="block2-txt-child1 flex-col-l">
                  <%= product.name || 'Product Name' %>
                    </a>
                    <span class="stext-105 cl3">â‚¹<%=product.salePrice%> </span>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%-include('../../views/partials/userPartials/footer')%>