<%-include('../../views/partials/userPartials/header')%>
    <link rel="stylesheet" href="/css/myaccount.css" />
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar Navigation (Replaced standard vertical nav) -->
            <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
                <div class="position-sticky pt-3" style="top: 85px;">
                    <div class="text-center mb-4 d-md-none">
                        <!-- Logo hidden on desktop as header has it -->
                        <h2 class="logo-text">Wardrobe</h2>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/myaccount">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/orders">
                                <i class="fas fa-shopping-bag me-2"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/updateProfile">
                                <i class="fas fa-user-edit me-2"></i> Update Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wallet">
                                <i class="fas fa-wallet me-2"></i> Wallet
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wishlist">
                                <i class="fas fa-heart me-2"></i> Wishlist
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/getAddress">
                                <i class="fas fa-map-marker-alt me-2"></i> My Address
                            </a>
                        </li>
                        <li class="nav-item mt-5">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Dashboard</h1>
                    <div class="text-muted">
                        <i class="far fa-calendar-alt me-2"></i>
                        <%= new Date().toLocaleDateString('en-US', { weekday: 'long' , year: 'numeric' , month: 'long' ,
                            day: 'numeric' }) %>
                    </div>
                </div>

                <!-- Profile Header -->
                <div class="profile-header">
                    <div class="row align-items-center">
                        <div class="col-md-auto text-center text-md-start">
                            <div class="profile-avatar d-inline-flex">
                                <%= user.name.charAt(0).toUpperCase() %>
                            </div>
                        </div>
                        <div class="col-md text-center text-md-start mt-3 mt-md-0">
                            <div class="profile-info">
                                <h2>Welcome back, <%= user.name %>! ðŸ‘‹</h2>
                                <p class="mb-0">
                                    <i class="fas fa-envelope me-2"></i>
                                    <%= user.email %>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-auto text-center text-md-end mt-3 mt-md-0">
                            <a href="/updateProfile" class="btn btn-light btn-lg">
                                <i class="fas fa-user-edit me-2"></i>Edit Profile
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <a href="/wallet" class="text-decoration-none">
                            <div class="quick-action-card">
                                <div class="icon-wrapper icon-wallet">
                                    <i class="fas fa-wallet"></i>
                                </div>
                                <h4>My Wallet</h4>
                                <p>Check Balance</p>
                                <span class="text-primary fw-bold">View details â†’</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/orders" class="text-decoration-none">
                            <div class="quick-action-card">
                                <div class="icon-wrapper icon-orders">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <h4>Recent Orders</h4>
                                <p>Track Status</p>
                                <span class="text-primary fw-bold">View orders â†’</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/getAddress" class="text-decoration-none">
                            <div class="quick-action-card">
                                <div class="icon-wrapper icon-address">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <h4>Manage Addresses</h4>
                                <p>Add or remove shipping addresses</p>
                                <span class="text-primary fw-bold">Manage â†’</span>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Statistics -->
                <h3 class="mb-4 fw-bold">Quick Stats</h3>
                <div class="row g-4 mb-5">
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="fas fa-box fa-2x text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-1">0</h3>
                                <p class="text-muted mb-0">Total Orders</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="fas fa-heart fa-2x" style="color: #f5576c;"></i>
                                </div>
                                <h3 class="fw-bold mb-1">0</h3>
                                <p class="text-muted mb-0">Wishlist Items</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="fas fa-map-marker-alt fa-2x" style="color: #38f9d7;"></i>
                                </div>
                                <h3 class="fw-bold mb-1">0</h3>
                                <p class="text-muted mb-0">Saved Addresses</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="fas fa-wallet fa-2x text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-1">â‚¹0</h3>
                                <p class="text-muted mb-0">Wallet Balance</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h4 class="fw-bold mb-4">
                                    <i class="fas fa-clock me-2 text-primary"></i>Recent Activity
                                </h4>
                                <div class="text-center py-5">
                                    <i class="fas fa-history fa-3x text-muted mb-3" style="opacity: 0.3;"></i>
                                    <p class="text-muted">No recent activity to display</p>
                                    <a href="/shop" class="btn btn-primary-custom mt-3">
                                        <i class="fas fa-shopping-cart me-2"></i>Start Shopping
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <%-include('../../views/partials/userPartials/footer')%>