  <script>
    // Robust Zoom Logic
    const container = document.getElementById('mainImageContainer');
    const img = document.getElementById('mainImage');

    container.addEventListener('mousemove', function (e) {
      const { left, top, width, height } = container.getBoundingClientRect();
      const x = e.clientX - left;
      const y = e.clientY - top;

      // Calculate percentage position
      const xPercent = (x / width) * 100;
      const yPercent = (y / height) * 100;

      // Transform Origin follows the mouse (smoothly due to CSS)
      img.style.transformOrigin = `${xPercent}% ${yPercent}%`;
      img.style.transform = 'scale(2.5)'; // Zoom scale
    });

    container.addEventListener('mouseleave', function () {
      img.style.transform = 'scale(1)';
      img.style.transformOrigin = 'center center';
    });

    // Image Switching Logic
    function changeImage(thumbnail, src) {
      const mainImg = document.getElementById('mainImage');
      mainImg.src = src;

      // Update active class
      document.querySelectorAll('.thumbnail-item').forEach(el => el.classList.remove('active'));
      thumbnail.classList.add('active');
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascript/cart.js"></script>
  <script>
    function handleAddToCart(btn) {
      console.log("Add to cart clicked");
      try {
        const productId = btn.getAttribute('data-id');
        const name = btn.getAttribute('data-name');
        const price = btn.getAttribute('data-price');

        // Find quantity input relative to the button or globally
        // Using closest wrapper to be safe if there are multiple products
        const wrapper = btn.closest('.col-md-6') || document;
        const countInput = wrapper.querySelector('.num-product') || document.querySelector('.num-product');
        const sizeInput = wrapper.querySelector('select[name="time"]') || document.getElementsByName('time')[0];

        if (!countInput) {
          console.error("Quantity input not found");
          return;
        }
        if (!sizeInput) {
          console.error("Size input not found");
          return;
        }

        const quantity = countInput.value;
        const size = sizeInput.value;

        console.log(`Adding: ${name}, Price: ${price}, Qty: ${quantity}, Size: ${size}`);

        // Call the original function
        // Note: cart.js defines it as: addToCart(productId, name, price, stock, size)
        // We pass 'quantity' as 'stock' because that's what the function expects as 4th arg
        if (typeof addToCart === 'function') {
          addToCart(productId, name, price, quantity, size);
        } else {
          console.error("addToCart function is missing!");
          Swal.fire('Error', 'Cart function missing. Please refresh.', 'error');
        }

      } catch (e) {
        console.error("Error in handleAddToCart:", e);
        if (typeof Swal !== 'undefined') {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong. Please refresh and try again.'
          });
        } else {
          alert("Something went wrong. Please refresh.");
        }
      }
    }
  </script>
