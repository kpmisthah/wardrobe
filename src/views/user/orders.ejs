<%-include('../../views/partials/userPartials/header')%>
  <title>Your Orders</title>
  <link rel="stylesheet" href="/css/myaccount.css" />
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <!-- Sidebar Navigation -->
      <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
        <div class="position-sticky pt-3" style="top: 85px;">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/myaccount">
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/orders">
                <i class="fas fa-shopping-bag me-2"></i> Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/updateProfile">
                <i class="fas fa-user-edit me-2"></i> Update Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wallet">
                <i class="fas fa-wallet me-2"></i> Wallet
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wishlist">
                <i class="fas fa-heart me-2"></i> Wishlist
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/getAddress">
                <i class="fas fa-map-marker-alt me-2"></i> My Address
              </a>
            </li>
            <li class="nav-item mt-5">
              <a class="nav-link text-danger" href="/logout">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Your Orders</h1>
        </div>

        <% if (orders && orders.length> 0) { %>
          <div class="card shadow-sm border-0">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                  <thead class="bg-light">
                    <tr>
                      <th class="ps-4">Order ID</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Total</th>
                      <th>Payment</th>
                      <th class="text-end pe-4">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% orders.forEach((order)=> { %> <% if (order.orderedItems && order.orderedItems.length> 0) { %>
                        <tr>
                          <td class="ps-4 fw-bold text-primary">#<%= order.orderId %>
                          </td>
                          <td>
                            <%= order.invoiceDate.toLocaleDateString('en-IN') %>
                          </td>
                          <td>
                            <div class="status-badge">
                              <span
                                class="badge rounded-pill bg-soft-<%= order.status.toLowerCase() === 'pending' ? 'warning' : (order.status.toLowerCase() === 'canceled' ? 'danger' : 'success') %> text-<%= order.status.toLowerCase() === 'pending' ? 'dark' : 'white' %>">
                                <%= order.status %>
                              </span>
                            </div>
                          </td>
                          <td class="fw-bold">
                            â‚¹<%= order.finalAmount || order.totalPrice %>
                          </td>
                          <td>
                            <% if (order.paymentStatus==='Pending' && order.paymentMethod=='razorpay' && order.status
                              !=='Delivered' && order.status !=='Canceled' ) { %>
                              <button class="btn btn-sm btn-outline-success"
                                onclick="retryPayment('<%= order.paymentMethod %>', '<%= order.finalAmount || order.totalPrice %>', '<%= order._id %>')">
                                Pay Now
                              </button>
                              <% } else { %>
                                <span class="text-muted">
                                  <%= order.paymentMethod %>
                                </span>
                                <% } %>
                          </td>
                          <td class="text-end pe-4">
                            <a href="/user/view-order/<%= order._id %>" class="btn btn-sm btn-light">
                              <i class="fas fa-eye"></i> View
                            </a>
                            <% if (order.status==='Pending' || order.status==='Shipped' ) { %>
                              <button class="btn btn-sm btn-outline-danger ms-2" onclick="canceled('<%= order._id %>')">
                                <i class="fas fa-times"></i> Cancel
                              </button>
                              <% } %>
                          </td>
                        </tr>
                        <% } %>
                          <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <nav aria-label="Page navigation" class="pagination-container mt-4">
            <ul class="pagination justify-content-center">
              <% for (let i=1; i <=totalpages; i++) { %>
                <li class="page-item <%= page === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>">
                    <%= i %>
                  </a>
                </li>
                <% } %>
            </ul>
          </nav>

          <% } else { %>
            <div class="empty-state">
              <i class="fas fa-shopping-basket"></i>
              <h4>No orders found</h4>
              <p>Looks like you haven't made your first order yet.</p>
              <a href="/shop" class="btn btn-primary-custom btn-lg px-5">Start Shopping</a>
            </div>
            <% } %>
      </main>
    </div>
  </div>
  <script src="/javascript/orders.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <%-include('../../views/partials/userPartials/footer')%>