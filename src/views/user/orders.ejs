<%- include('../partials/userPartials/header') %>
  <link rel="stylesheet" href="/css/myaccount.css" />



  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar Navigation -->
      <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
        <div class="position-sticky pt-3" style="top: 85px;">
          <div class="text-center mb-4 d-md-none">
            <h2 class="logo-text">Wardrobe</h2>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/myaccount">
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/orders">
                <i class="fas fa-shopping-bag me-2"></i> Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/updateProfile">
                <i class="fas fa-user-edit me-2"></i> Update Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wallet">
                <i class="fas fa-wallet me-2"></i> Wallet
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wishlist">
                <i class="fas fa-heart me-2"></i> Wishlist
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/getAddress">
                <i class="fas fa-map-marker-alt me-2"></i> My Address
              </a>
            </li>
            <li class="nav-item mt-5">
              <a class="nav-link text-danger" href="/logout">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
          <h1 class="h2 fw-bold">My Orders</h1>
          <span class="text-muted">
            <%= orders ? orders.length : 0 %> Orders found
          </span>
        </div>

        <% if (orders && orders.length> 0) { %>
          <div class="row">
            <% orders.forEach((order)=> { %>
              <div class="col-12">
                <div class="order-card">
                  <!-- Card Header -->
                  <div class="order-header">
                    <div class="d-flex align-items-center">
                      <div class="me-3">
                        <div class="p-2 bg-light rounded-circle text-center" style="width: 45px; height: 45px;">
                          <i class="fas fa-box-open text-secondary fs-5 mt-1"></i>
                        </div>
                      </div>
                      <div>
                        <div class="order-id-label">Order ID</div>
                        <div class="order-id-value">#<%= order.orderId %>
                        </div>
                      </div>
                    </div>
                    <span class="status-badge-lg bg-status-<%= order.status.toLowerCase() %>">
                      <%= order.status %>
                    </span>
                  </div>

                  <!-- Card Body -->
                  <div class="order-content">
                    <div class="row align-items-center">
                      <!-- Order Date -->
                      <div class="col-md-3 mb-3 mb-md-0">
                        <div class="info-group">
                          <span class="info-label">Order Date</span>
                          <span class="info-value">
                            <%= new Date(order.invoiceDate).toLocaleDateString('en-IN', { day: 'numeric' , month: 'long'
                              , year: 'numeric' }) %>
                          </span>
                        </div>
                      </div>

                      <!-- Total Amount -->
                      <div class="col-md-3 mb-3 mb-md-0">
                        <div class="info-group">
                          <span class="info-label">Total Amount</span>
                          <span class="price-value">â‚¹<%= order.finalAmount || order.totalPrice %></span>
                        </div>
                      </div>

                      <!-- Item Preview (Images) -->
                      <div class="col-md-3 mb-3 mb-md-0">
                        <div class="info-group">
                          <span class="info-label mb-2">Items (<%= order.orderedItems.length %>)</span>
                          <div class="product-preview">
                            <% order.orderedItems.slice(0, 3).forEach(item=> { %>
                              <% if (item.product && item.product.productImage && item.product.productImage.length> 0) {
                                %>
                                <img src="/uploads/product-images/<%= item.product.productImage[0] %>"
                                  class="preview-img" alt="Product" title="<%= item.product.name %>">
                                <% } else { %>
                                  <div
                                    class="preview-img bg-light d-flex align-items-center justify-content-center text-muted small">
                                    <i class="fas fa-image"></i>
                                  </div>
                                  <% } %>
                                    <% }) %>
                                      <% if (order.orderedItems.length> 3) { %>
                                        <div
                                          class="preview-img bg-light d-flex align-items-center justify-content-center text-secondary fw-bold small">
                                          +<%= order.orderedItems.length - 3 %>
                                        </div>
                                        <% } %>
                          </div>
                        </div>
                      </div>

                      <!-- Actions -->
                      <div class="col-md-3 text-md-end">
                        <div class="action-area justify-content-md-end">
                          <% if (order.paymentStatus==='Pending' && order.paymentMethod==='razorpay' && order.status
                            !=='Delivered' && order.status !=='Canceled' ) { %>
                            <button class="btn btn-retry btn-success text-white border-0 shadow-sm"
                              onclick="retryPayment('<%= order.paymentMethod %>', '<%= order.finalAmount || order.totalPrice %>', '<%= order._id %>')">
                              <i class="fas fa-redo-alt me-2"></i>Retry
                            </button>
                            <% } %>
                              <a href="/user/view-order/<%= order._id %>" class="btn btn-view-details">
                                View Details
                              </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>

          <!-- Pagination -->
          <% if (totalpages> 1) { %>
            <nav aria-label="Page navigation" class="mt-5 mb-5">
              <ul class="pagination justify-content-center">
                <% for (let i=1; i <=totalpages; i++) { %>
                  <li class="page-item <%= page === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
              </ul>
            </nav>
            <% } %>

              <% } else { %>
                <div class="text-center py-5">
                  <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-cart-2130356-1800917.png"
                    alt="No Orders" style="max-width: 250px; opacity: 0.8;">
                  <h3 class="mt-4 fw-bold text-secondary">No orders yet</h3>
                  <p class="text-muted fs-5">Looks like you haven't placed any orders yet.</p>
                  <a href="/shop" class="btn btn-dark btn-lg mt-3 px-5 py-3 rounded-pill shadow-sm">Start Shopping</a>
                </div>
                <% } %>

      </main>
    </div>
  </div>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascript/orders.js"></script>
  <%- include('../partials/userPartials/footer') %>