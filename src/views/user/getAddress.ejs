<%-include('../../views/partials/userPartials/header')%>
    <title>Manage Addresses</title>
    <link rel="stylesheet" href="/css/myaccount.css" />
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar Navigation -->
            <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
                <div class="position-sticky pt-3" style="top: 85px;">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/myaccount">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/orders">
                                <i class="fas fa-shopping-bag me-2"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/updateProfile">
                                <i class="fas fa-user-edit me-2"></i> Update Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wallet">
                                <i class="fas fa-wallet me-2"></i> Wallet
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wishlist">
                                <i class="fas fa-heart me-2"></i> Wishlist
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/getAddress">
                                <i class="fas fa-map-marker-alt me-2"></i> My Address
                            </a>
                        </li>
                        <li class="nav-item mt-5">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Manage Addresses</h1>
                    <a href="/add-address" class="btn btn-primary-custom"><i class="fas fa-plus me-2"></i>Add New
                        Address</a>
                </div>

                <div class="row">
                    <% if (address && address.length> 0) { %> <% address.forEach((addr)=> { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm h-100 border-0">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <h5 class="card-title fw-bold">
                                                <%= addr.name %>
                                            </h5>
                                            <span class="badge bg-light text-dark border">Home</span>
                                        </div>
                                        <p class="card-text text-muted small mb-3">
                                            <%= addr.houseNumber %>, <%= addr.city %><br />
                                                    <%= addr.district %>, <%= addr.state %><br />
                                                            Ph: <%= addr.phone %>
                                        </p>
                                        <div class="d-flex gap-2">
                                            <a href="/edit/<%= addr._id %>"
                                                class="btn btn-sm btn-outline-primary flex-grow-1">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger flex-grow-1"
                                                onclick="deleteAddress('<%= addr._id %>', event)">
                                                <i class="fas fa-trash-alt me-1"></i>Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12 text-center mt-5">
                                        <h4 class="text-muted">No addresses found</h4>
                                        <p class="text-muted">Add a shipping address to speed up checkout.</p>
                                    </div>
                                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascript/deleteAddress.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <%-include('../../views/partials/userPartials/footer')%>