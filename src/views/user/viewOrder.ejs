<%-include('../../views/partials/userPartials/header')%>
  <title>Order Details</title>
  <link rel="stylesheet" href="/css/myaccount.css" />
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <!-- Sidebar Navigation -->
      <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
        <div class="position-sticky pt-3" style="top: 85px;">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/myaccount">
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/orders">
                <i class="fas fa-shopping-bag me-2"></i> Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/updateProfile">
                <i class="fas fa-user-edit me-2"></i> Update Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wallet">
                <i class="fas fa-wallet me-2"></i> Wallet
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wishlist">
                <i class="fas fa-heart me-2"></i> Wishlist
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/getAddress">
                <i class="fas fa-map-marker-alt me-2"></i> My Address
              </a>
            </li>
            <li class="nav-item mt-5">
              <a class="nav-link text-danger" href="/logout">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Order Details</h1>
          <a href="/orders" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Orders
          </a>
        </div>

        <% if (order) { %>
          <div class="card shadow-sm mb-4 border-0">
            <div class="card-body">
              <div class="row">
                <div class="col-md-4 mb-3">
                  <h6 class="text-muted text-uppercase mb-1">Order ID</h6>
                  <p class="mb-0 fw-bold">#<%= order.orderId %>
                  </p>
                </div>
                <div class="col-md-4 mb-3">
                  <h6 class="text-muted text-uppercase mb-1">Date</h6>
                  <p class="mb-0">
                    <%= order.invoiceDate.toDateString() %>
                  </p>
                </div>
                <div class="col-md-4 mb-3">
                  <h6 class="text-muted text-uppercase mb-1">Status</h6>
                  <span
                    class="badge bg-<%= order.status.toLowerCase() === 'pending' ? 'warning' : (order.status.toLowerCase() === 'canceled' ? 'danger' : 'success') %>">
                    <%= order.status %>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-white border-bottom">
              <h5 class="mb-0 fw-bold">Items</h5>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                  <thead class="bg-light">
                    <tr>
                      <th class="ps-4">Product</th>
                      <th class="text-center">Quantity</th>
                      <th>Price</th>
                      <th>Return Status</th>
                      <th class="text-end pe-4">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.orderedItems.forEach((item)=> { %>
                      <tr>
                        <td class="ps-4">
                          <div class="d-flex align-items-center">
                            <% if (item.product && item.product.productImage && item.product.productImage.length> 0) {
                              %>
                              <img src="/uploads/product-images/<%= item.product.productImage[0] %>"
                                alt="<%= item.product.name %>" class="rounded me-3 shadow-sm" width="60" height="60"
                                style="object-fit: cover;" />
                              <% } else { %>
                                <div class="bg-light rounded d-flex align-items-center justify-content-center me-3"
                                  style="width: 60px; height: 60px;">
                                  <i class="fas fa-image text-muted"></i>
                                </div>
                                <% } %>
                                  <span class="fw-medium">
                                    <%= item.product ? item.product.name : 'Product unavailable' %>
                                  </span>
                          </div>
                        </td>
                        <td class="text-center">
                          <%= item.quantity %>
                        </td>
                        <td>₹<%= item.price %>
                        </td>
                        <td>
                          <% if (item.returnStatus==='Requested' ) { %>
                            <span class="badge bg-warning text-dark">Requested</span>
                            <% } else if (item.returnStatus==='Approved' ) { %>
                              <span class="badge bg-success">Approved</span>
                              <% } else if (item.returnStatus==='Rejected' ) { %>
                                <span class="badge bg-danger">Rejected</span>
                                <% } else { %>
                                  <span class="badge bg-light text-muted border">None</span>
                                  <% } %>
                        </td>
                        <td class="text-end pe-4">
                          <% if (order.status==='Pending' || order.status==='Shipped' ) { %>
                            <% if (item.returnStatus !=="Approved" ) { %>
                              <% if (item.cancelStatus==='canceled' ) { %>
                                <span class="badge bg-soft-danger text-danger">Canceled</span>
                                <% } else { %>
                                  <button type="button" class="btn btn-sm btn-outline-danger"
                                    id="cancel-button-<%= item._id%>"
                                    onclick="cancel('<%= order.orderId %>','<%= item._id %>')">Cancel Item</button>
                                  <% } %>
                                    <% } else { %>
                                      <span class="text-success"><i class="fas fa-check-circle me-1"></i>Returned</span>
                                      <% } %>
                                        <% } else if (order.status==='Delivered' || order.status==='Completed' ) { %>
                                          <% if (item.cancelStatus==='canceled' ) { %>
                                            <span class="badge bg-soft-danger text-danger">Canceled</span>
                                            <% } else if (item.returnStatus==='Not Requested' ) { %>
                                              <button type="button" class="btn btn-sm btn-outline-warning"
                                                onclick="returnOrder('<%= item._id %>')">Request Return</button>
                                              <% } else { %>
                                                <button class="btn btn-sm btn-secondary" disabled>
                                                  <%= item.returnStatus %>
                                                </button>
                                                <% } %>
                                                  <% } else { %>
                                                    <span class="text-muted">-</span>
                                                    <% } %>
                        </td>
                      </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer bg-white d-flex justify-content-between align-items-center mb-0">
              <h5 class="mb-0">Total Amount: <span class="fw-bold text-primary">₹<%= order.finalAmount ||
                    order.totalPrice %></span></h5>
              <div>
                <button type="button" class="btn btn-primary-custom" id="downloadInvoices">
                  <i class="fas fa-file-invoice me-2"></i>Download Invoice
                </button>
                <input type="hidden" name="orderId" value="<%=order.orderId%>">
              </div>
            </div>
          </div>

          <% } else { %>
            <div class="empty-state">
              <i class="fas fa-box-open"></i>
              <h4>No order details available</h4>
            </div>
            <% } %>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascript/viewOrder.js"></script>
  <%-include('../../views/partials/userPartials/footer')%>