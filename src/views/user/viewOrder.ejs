<%- include('../../views/partials/userPartials/header') %>

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Shopping Cart
        </span>
    </div>
</div>

<div class="container">
    <h2>Order Details</h2>
    
    <% if (order) { %>
        <p><strong>Order ID:</strong> <%= order.orderId %></p>
        <p><strong>Order Date:</strong> <%= order.invoiceDate.toDateString() %></p>
        <p><strong>Status:</strong> <%= order.status %></p>
        
        <table class="table-shopping-cart">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% order.orderedItems.forEach((item) => { %>
                    <tr>
                        <td>
                            <div class="product-info">
                                <img src="/uploads/product-images/<%= item.product.productImage[0] %>" 
                                     alt="<%= item.product.name %>" 
                                     width="50px" 
                                     height="50px">
                                <p><%= item.product.name %></p>
                            </div>
                        </td>
                        <td><%= item.quantity %></td>
                        <td><%= item.price %></td>
                        <td>
                            <button type="button" 
                                    class="btn-cancel" 
                                    onclick="remove('<%= item._id %>', '<%= item.product._id %>')">
                                Cancel
                            </button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <h3>Total Amount: <%= order.totalPrice %></h3>
    <% } else { %>
        <p>No order data available.</p>
    <% } %>
</div>
</div>

<!-- Footer -->
<script src="/javascript/viewOrder.js"></script>
<%- include('../../views/partials/userPartials/footer') %>
