<%-include('../../views/partials/userPartials/header')%>
    <title>My Wishlist</title>
    <link rel="stylesheet" href="/css/myaccount.css" />
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <!-- Sidebar Navigation -->
            <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
                <div class="position-sticky pt-3" style="top: 85px;">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/myaccount">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/orders">
                                <i class="fas fa-shopping-bag me-2"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/updateProfile">
                                <i class="fas fa-user-edit me-2"></i> Update Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/wallet">
                                <i class="fas fa-wallet me-2"></i> Wallet
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/wishlist">
                                <i class="fas fa-heart me-2"></i> Wishlist
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/getAddress">
                                <i class="fas fa-map-marker-alt me-2"></i> My Address
                            </a>
                        </li>
                        <li class="nav-item mt-5">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">My Wishlist</h1>
                </div>

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% if (wishlist && wishlist.items && wishlist.items.length> 0) { %>
                        <% wishlist.items.forEach(value=> { %>
                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 position-relative">
                                    <img src="/uploads/product-images/<%= value.product.productImage[0] %>"
                                        class="card-img-top" alt="<%= value.product.name %>"
                                        style="height: 250px; object-fit: cover;">
                                    <button type="button"
                                        class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 rounded-circle"
                                        onclick="removeCart('<%=value._id%>')" title="Remove from Wishlist">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title text-truncate">
                                            <%= value.product.name %>
                                        </h5>
                                        <p class="card-text text-muted mb-1">Size: <%= value.size || 'N/A' %>
                                        </p>
                                        <div class="mt-auto d-flex justify-content-between align-items-center">
                                            <span class="fs-5 fw-bold text-dark">₹<%= value.product.salePrice %>
                                            </span>
                                            <small class="text-decoration-line-through text-muted">₹<%=
                                                    value.product.regularPrice %></small>
                                        </div>
                                        <button type="button" class="btn btn-primary-custom mt-3 w-100"
                                            onclick="addCart('<%= value.product._id %>','<%= value.product.name %>','<%= value.size %>','<%= value.product.regularPrice %>')">
                                            <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-12 text-center py-5">
                                        <div class="empty-state">
                                            <i class="fas fa-heart text-muted mb-3"></i>
                                            <h4>Your wishlist is empty</h4>
                                            <p class="text-muted">Explore our collection and add your favorite
                                                items!
                                            </p>
                                            <a href="/shop" class="btn btn-primary-custom mt-3">Start Shopping</a>
                                        </div>
                                    </div>
                                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascript/wishlist.js"></script>
    <%-include('../../views/partials/userPartials/footer')%>