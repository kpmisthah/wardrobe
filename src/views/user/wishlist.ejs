
<%- include('../../views/partials/userPartials/header') %>
<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container" style="margin-top: 6rem;">
        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                    All Products
                </button>
            </div>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Shop</li>
                </ol>
            </nav>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>
                    <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
                </div>    
            </div>
        </div>

        <aside class="sidebar">
            <div class="categories">Categories</div>
            <ul class="category-list">
                <li>Casuals</li>
                <li>Shirts</li>
                <li>Kurti</li>
                <li>Gown</li>
            </ul>
        </aside>

        <!-- Wishlist Items -->
<!-- Wishlist Items -->
<div class="row isotope-grid">
    <% if (wishlist.items && wishlist.items.length > 0) { %>
        <% wishlist.items.forEach(value => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35">
            <div class="card">
                <img src="/uploads/product-images/<%= value.product.productImage[0] %>" class="card-img-top" alt="IMG-PRODUCT">
                <div class="card-body">
                    <h5 class="card-title"><%= value.product.name %></h5>
                    <p class="card-text"><%= value.product.salePrice %></p>
                    <p class="card-text"><%= value.size %></p>
                    <button type="submit" class="btn btn-primary" 
                        onclick="addCart('<%= value.product._id %>','<%= value.product.name %>','<%= value.size %>','<%= value.product.regularPrice %>')">
                        Add to Cart
                    </button>
                    <button type="submit" class="btn btn-danger mt-2" onclick="removeCart('<%=value._id%>')" style="margin-bottom: 0.5rem;">Remove</button>
                </div>
            </div>
        </div>
        <% }) %>
    <% } else { %>
        <div class="col-12 text-center">
            <p class="text-muted">Your wishlist is empty. Start adding your favorite items!</p>
        </div>
    <% } %>
</div>

