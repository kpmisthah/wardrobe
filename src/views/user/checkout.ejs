<%- include('../../views/partials/userPartials/header') %>
<div class="checkout-container">
    <!-- Address Section -->
    <div class="addresses-section">
        <h2>Select Delivery Address</h2>
        <% address.forEach((addr) => { %>
        <div class="saved-addresses">
            <div class="address-card" data-id="<%= addr._id %>">
                <div class="address-details">
                    <h4><%= addr.name %></h4>
                    <p><%= addr.email %></p>
                    <p><%= addr.state %></p>
                    <p><%= addr.district %></p>
                    <p><%= addr.city %></p>
                    <p><%= addr.phone %></p>
                    <p><%= addr.zipCode %></p>
                </div>
                <div class="address-actions">
                    <button class="btn btn-primary btn-sm">
                        <a href="/editted/<%= addr._id %>" class="text-white text-decoration-none">Edit</a>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
        <button class="btn btn-success btn-sm">
            <a href="/add-checkoutaddress" class="text-white text-decoration-none">Add Address</a>
        </button>
    </div>

    <!-- Order Summary -->
    <div class="order-summary">
        <h2>Order Summary</h2>
        <% cart.items.forEach((product) => { %>
        <div class="order-items">
            <div class="order-item">
                <div class="item-image">
                    <img src="/uploads/product-images/<%=product.product.productImage[0]%>" alt="IMG" width="80px" height="80px">
                </div>
                <div class="item-details">
                    <h4><%= product.name %></h4>
                    <p>Size: <%= product.size %></p>
                    <p>Quantity: <%= product.quantity %></p>
                    <p>Price: <%= product.price %></p>
                </div>
            </div>
        </div>
        <% }) %>

        <!-- Subtotal Section -->
        <div class="subtotal-section">
            <div class="price-row">
                <span>Subtotal</span>
                <span><%= cart.bill %></span>
            </div>
        </div>

        <!-- Payment Method Section -->
        <div class="payment-method-section">
            <h3>Choose Payment Method</h3>
            <br>
            <form class="payment-form"  id="payment-form" class="payment-form"  onsubmit="placeOrder(event)">
                <div class="payment-option">
                    <input type="radio" id="upi" name="paymentMethod" value="UPI" required>
                    <label for="upi">UPI</label>
                </div>
                <div class="payment-option">
                    <input type="radio" id="cod" name="paymentMethod" value="COD">
                    <label for="cod">Cash on Delivery</label>
                </div>
                <div class="payment-option">
                    <input type="radio" id="card" name="paymentMethod" value="Card">
                    <label for="card">Credit/Debit Card</label>
                </div>
                <div class="coupon-section">
                    <div class="flex-w flex-m m-r-20 m-tb-5">
                        <!-- Coupon Input -->
                        <input
                            class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5"
                            type="text"
                            name="coupon"
                            id="coupon-code-input"
                            placeholder="Enter Coupon Code"
                        />
                        <!-- Apply Coupon Button -->
                        <div
                            class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5"
                            onclick="applyCoupon()"
                        >
                            Apply Coupon
                        </div>
                    </div>
                
                    <!-- Display Applied Coupon Name -->
    <!-- Display Available Coupons -->
    <div class="coupon-display">
        <% if (coupon && coupon.length > 0) { %>
            <h4>Available Coupons:</h4>
            <% coupon.forEach((coupon) => { %>
                <p><strong>Coupon Code:</strong> <%= coupon.code %> - <%=coupon.discountValue%> <%=coupon.discountType == 'percentage'?'percentage':'rupees'%> %>offer</p>
            <% }) %>
        <% } else { %>
            <p>No coupons available at the moment.</p>
        <% } %>
    </div>
                </div>
                
                <input type="hidden" name="addressId" id="selected-address-id">
                <button type="submit" class="checkout-button">Place Order</button>
            </form>
        </div>
    </div>

</div>

<script src="/javascript/checkout.js"></script>
</body>
</html>
<%- include('../../views/partials/userPartials/footer') %>