<%-include('../../views/partials/userPartials/header')%>
  <title>Edit Address</title>
  <link rel="stylesheet" href="/css/myaccount.css" />
  <style>
    .form-control,
    .form-select {
      border-radius: 8px;
      padding: 0.75rem 1rem;
    }
  </style>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <!-- Sidebar Navigation -->
      <div class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
        <div class="position-sticky pt-3" style="top: 85px;">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/myaccount">
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orders">
                <i class="fas fa-shopping-bag me-2"></i> Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/updateProfile">
                <i class="fas fa-user-edit me-2"></i> Update Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wallet">
                <i class="fas fa-wallet me-2"></i> Wallet
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wishlist">
                <i class="fas fa-heart me-2"></i> Wishlist
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/getAddress">
                <i class="fas fa-map-marker-alt me-2"></i> My Address
              </a>
            </li>
            <li class="nav-item mt-5">
              <a class="nav-link text-danger" href="/logout">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Edit Address</h1>
          <a href="/getAddress" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Cancel
          </a>
        </div>

        <div class="card shadow-sm border-0">
          <div class="card-body p-4">
            <form class="row g-3" id="address-form" onsubmit="address(event)">
              <input type="hidden" name="addressId" value="<%=address._id%>">
              <div class="col-md-6">
                <label for="inputName" class="form-label text-muted">Full Name</label>
                <input type="text" class="form-control" id="inputName" name="name" value="<%=address.name%>">
                <div id="error1" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-6">
                <label for="inputEmail" class="form-label text-muted">Email</label>
                <input type="email" class="form-control" id="inputEmail" name="email" value="<%=address.email%>">
                <div id="error2" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-6">
                <label for="inputPhone" class="form-label text-muted">Phone Number</label>
                <input type="tel" class="form-control" id="inputPhone" name="phone" value="<%=address.phone%>">
                <div id="error3" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-6">
                <label for="inputHouse" class="form-label text-muted">House No. / Building</label>
                <input type="text" class="form-control" id="inputHouse" name="houseNumber"
                  value="<%=address.houseNumber%>">
                <div id="error4" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-4">
                <label for="inputCity" class="form-label text-muted">City</label>
                <input type="text" class="form-control" id="inputCity" name="city" value="<%=address.city%>">
                <div id="error6" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-4">
                <label for="inputDistrict" class="form-label text-muted">District</label>
                <input type="text" class="form-control" id="inputDistrict" name="district"
                  value="<%=address.district%>">
                <div id="error8" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-4">
                <label for="inputState" class="form-label text-muted">State</label>
                <select id="inputState" class="form-select" name="state">
                  <option value="<%=address.state%>" selected>
                    <%=address.state%>
                  </option>
                  <option>Andhra Pradesh</option>
                  <option>Karnataka</option>
                  <option>Kerala</option>
                  <option>Maharashtra</option>
                  <option>Tamil Nadu</option>
                  <option>Telangana</option>
                  <option>Delhi</option>
                  <option>Uttar Pradesh</option>
                  <option>West Bengal</option>
                </select>
                <div id="error7" class="text-danger small mt-1"></div>
              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label text-muted">Zip Code</label>
                <input type="text" class="form-control" id="inputZip" name="zipCode" value="<%=address.zipCode%>">
                <div id="error9" class="text-danger small mt-1"></div>
              </div>
              <div class="col-12 mt-4">
                <button type="submit" class="btn btn-primary-custom px-4 py-2 w-100">
                  Update Address
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascript/editAddress.js"></script>
  <%-include('../../views/partials/userPartials/footer')%>